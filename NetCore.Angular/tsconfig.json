{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "outDir": "wwwroot/js",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}